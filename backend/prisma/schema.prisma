generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Demande {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String
  service    String
  dateDebut  DateTime
  dateFin    DateTime
  statut     Statut   @default(EN_ATTENTE)
  motivation String?
  createdAt  DateTime @default(now())
}

enum Statut {
  EN_ATTENTE
  APPROUVEE
  REFUSEE
}